{
  "name": "yamllint-fix",
  "displayName": "YamlLint Fix",
  "description": "VS Code extension for YAML linting and fixing using yamllint and yamlfix",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=20"
  },
  "keywords": [
    "yaml",
    "yamlfix",
    "fix",
    "formatter",
    "yamllint",
    "fix yaml",
    "yaml fix"
  ],
  "categories": [
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:yaml",
    "onLanguage:yml"
  ],
  "main": "./dist/extension.js",
  "icon": "images/icon.png",
  "license": "MIT",
  "author": "Kus CÃ¡mara",
  "publisher": "kuscamara",
  "galleryBanner": {
    "color": "#002b36",
    "theme": "dark"
  },
  "contributes": {
    "commands": [
      {
        "command": "yamlLintFix.fixFile",
        "title": "Fix file",
        "category": "YamlLint"
      },
      {
        "command": "yamlLintFix.fixWorkspace",
        "title": "Fix all files in workspace",
        "category": "YamlLint"
      }
    ],
    "configuration": {
      "title": "YamlLint Fix",
      "properties": {
        "yamlLintFix.yamllintPath": {
          "type": "string",
          "default": "yamllint",
          "description": "Path to yamllint executable"
        },
        "yamlLintFix.yamlfixPath": {
          "type": "string",
          "default": "yamlfix",
          "description": "Path to yamlfix executable"
        },
        "yamlLintFix.autoFixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix YAML files on save"
        },
        "yamlLintFix.configFile": {
          "type": "string",
          "default": ".yamllint",
          "description": "Path to yamllint configuration file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome check src",
    "format": "biome format src --write"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "lefthook": "^1.11.13",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "execa": "^8.0.1"
  }
}
