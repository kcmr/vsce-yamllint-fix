{
  "name": "yamllint-fix",
  "version": "0.0.0-development",
  "description": "Extension for YAML linting and fixing using yamllint and yamlfix",
  "author": "Kus CÃ¡mara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kcmr/vsce-yamllint-fix"
  },
  "bugs": {
    "url": "https://github.com/kcmr/vsce-yamllint-fix/issues"
  },
  "homepage": "https://github.com/kcmr/vsce-yamllint-fix#readme",
  "keywords": [
    "yaml",
    "yamlfix",
    "fix",
    "formatter",
    "yamllint",
    "fix yaml",
    "yaml fix"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome check src",
    "format": "biome format src --write"
  },
  "dependencies": {
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "lefthook": "^1.11.13",
    "semantic-release": "^24.2.4",
    "semantic-release-vsce": "^6.0.8",
    "typescript": "^5.3.3"
  },
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=20"
  },
  "directories": {
    "test": "test"
  },
  "displayName": "YamlLint Fix",
  "publisher": "kuscamara",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#002b36",
    "theme": "dark"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:yaml",
    "onLanguage:yml"
  ],
  "contributes": {
    "commands": [
      {
        "command": "yamlLintFix.fixFile",
        "title": "Fix file",
        "category": "YamlLint"
      },
      {
        "command": "yamlLintFix.fixWorkspace",
        "title": "Fix all files in workspace",
        "category": "YamlLint"
      }
    ],
    "configuration": {
      "title": "YamlLint Fix",
      "properties": {
        "yamlLintFix.yamllintPath": {
          "type": "string",
          "default": "yamllint",
          "description": "Path to yamllint executable"
        },
        "yamlLintFix.yamlfixPath": {
          "type": "string",
          "default": "yamlfix",
          "description": "Path to yamlfix executable"
        },
        "yamlLintFix.autoFixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix YAML files on save"
        },
        "yamlLintFix.configFile": {
          "type": "string",
          "default": ".yamllint",
          "description": "Path to yamllint configuration file"
        }
      }
    }
  }
}
